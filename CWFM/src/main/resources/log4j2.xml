<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

   <Properties>
    <Property name="LOG_PATH">${sys:catalina.base}/logs</Property>
    <Property name="LOG_FILE">cwfm.log</Property>
</Properties>


    <Appenders>

        <!-- Rolling File Appender -->
        <RollingFile name="FileAppender"
                     fileName="${LOG_PATH}/${LOG_FILE}"
                     filePattern="${LOG_PATH}/cwfm-%d{yyyy-MM-dd}.log.gz">

            <PatternLayout>
                <Pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %c - %msg%n
                </Pattern>
            </PatternLayout>

            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <!-- Console (optional, good for debugging) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{HH:mm:ss} %-5level %c - %msg%n"/>
        </Console>

    </Appenders>

    <Loggers>

        <!-- Your application -->
        <Logger name="com.yourcompany.cwfm" level="info" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="FileAppender"/>
        </Root>

    </Loggers>

</Configuration>
